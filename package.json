{
  "name": "simpleIsotope",
  "version": "0.1.0",
  "description": "Simplified filter and sort magical layouts",
  "main": [
	"build/simple-isotope.js",
	"build/simple-isotope.min.js"
  ],
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "dependencies": {
  },
  "devDependencies": {
    "jquery": "^2.1.1",
	"isotope": "^2.0.1",
	"isotope-packery": "^1.0.0",
	"isotope-fit-columns": "^0.1.3"
  },
  "ignore": [
    "source/",
    ".gitignore",
    "gulpfile.js",
	"package.json"
  ],
  "scripts": {
    "build-debug": "browserify source/simple-isotope.amd.js -d --s simpleIsotope > build/simple-isotope.js",
    "build-min": "browserify source/simple-isotope.amd.js --s simpleIsotope | uglifyjs -c > build/simple-isotope.min.js",
    "build": "npm run build-debug && npm run build-min",
    "watch": "watchify source/simple-isotope.amd.js -d --s simpleIsotope -o build/simple-isotope.js -v"
  }
}
